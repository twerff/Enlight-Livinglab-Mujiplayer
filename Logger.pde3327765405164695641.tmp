//logMuli(IP, function,

int interactionID = 0;

class MULIaction
{
  String date;
  String time;
  int duration;

  String function;
  String IP;
  int ID;
  String deviceType;
  
  int act = -1;
  int[] areas;
  int ct = -1;
  int dim = -1;
  
  public MULIaction()
  {
    init();
  }
  
  public MULIaction(String f)
  {
    function = f;
    init();
  }
  
  private void init()
  {
    date = getDate();
    time = getTime();
    
    //PLAY A SOUND
    pop.rewind();
    pop.play();
  }
  
  void getParticipantInfoByIP(String ip)
  {
    IP = ip;
    ID = 999;
    
    if (IP.length() < 2)
    {
      ID = int(IP);
      IP = TABLETIP;
    }
    else if (getParticipantByIP(IP)!=null)   ID = getParticipantByIP(IP).getID();
  }
  
  public void finish()
  {
    checkDate();
    
    TableRow prevRow = table.getRow(table.getRowCount()-1);
    
    if (IP.equals(prevRow.getInt("IP")) && ID.equals(prevRow.getInt("ID")))
    {
      long startTime = getTimeAsInt(time) - duration/1000;
      long prevEndTime = getTimeAsInt(prevRow.getString("time"));
      long timeBetween = startTime - prevEndTime;
      
      println(time + " - " + duration + " = " + startTime);
      println(" this is " + timeBetween + "seconds after previous interaction");
      
      if (timeBetween > 5) interactionID ++;
    }
    else
    {
      interactionID ++;
    }
    
    //create a new entry
    TableRow newRow = table.addRow();
    
    newRow.setString("date", date);
    newRow.setString("time", time);
    newRow.setString("event", "MULI FloorPlan");
    newRow.setString("sender", IP);
    newRow.setString("recipient", "Server");
    newRow.setString("function", function);
    
    newRow.setInt("ID", ID);
    newRow.setInt("duration", duration);
    
    if (act >= 0) newRow.setInt("activity", act);
    if (ct >= 0)  newRow.setInt("CT", ct);
    if (dim >= 0) newRow.setInt("DimLevel", dim);
    
    newRow.setInt("Number of Areas", areas.length);
    for (int i = 0; i< areas.length; i++) newRow.setInt("Area"+(i+1), areas[i]);
     
    newRow.setInt("Interaction ID", interactionID);    //...how????
    
    saveTable(table, filePath);
  }
}

